  <script>
    // ======================
    // 1) PASTE YOUR FORMSPREE LINK HERE
    // Example looks like: https://formspree.io/f/abcdwxyz
    // ======================
    const FORMSPREE_ENDPOINT = "https://formspree.io/f/xpqjqvan";

    // Optional: name via URL ?name=Vaishnavi
    const params = new URLSearchParams(location.search);
    const nm = params.get("name");
    if (nm) document.getElementById("name").textContent = nm;

    const stage = document.getElementById("stage");
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");

    const yayScreen = document.getElementById("yayScreen");
    const planScreen = document.getElementById("planScreen");
    const statusLine = document.getElementById("statusLine");

    // ---- Place proposal buttons below the title and close together ----
    function placeInitialButtons() {
      const s = stage.getBoundingClientRect();
      const yesW = yesBtn.getBoundingClientRect().width;
      const noW = noBtn.getBoundingClientRect().width;

      const centerX = s.width / 2;
      const y = s.height * 0.46; // safely below header

      const gap = 18;
      yesBtn.style.left = (centerX - gap / 2 - yesW) + "px";
      yesBtn.style.top = y + "px";

      noBtn.style.left = (centerX + gap / 2) + "px";
      noBtn.style.top = y + "px";
    }

    // ---- Smooth avoidance (potential-field-ish) ----
    let noPos = { x: 0, y: 0 };
    let mouse = { x: null, y: null };
    let animOn = true;

    function clamp(v, lo, hi) { return Math.max(lo, Math.min(hi, v)); }

    function syncNoToStyle() {
      noBtn.style.left = noPos.x + "px";
      noBtn.style.top = noPos.y + "px";
    }

    function initNoPosFromDOM() {
      const s = stage.getBoundingClientRect();
      const n = noBtn.getBoundingClientRect();
      noPos.x = n.left - s.left;
      noPos.y = n.top - s.top;
      syncNoToStyle();
    }

    function stepAvoidance() {
      if (!animOn) return;

      const s = stage.getBoundingClientRect();
      const n = noBtn.getBoundingClientRect();

      if (mouse.x === null || mouse.y === null) {
        requestAnimationFrame(stepAvoidance);
        return;
      }

      const nx = noPos.x + n.width / 2;
      const ny = noPos.y + n.height / 2;

      const mx = mouse.x;
      const my = mouse.y;

      const dx = nx - mx;
      const dy = ny - my;
      const dist = Math.hypot(dx, dy);

      const rootStyle = getComputedStyle(document.documentElement);
      const R = Number(rootStyle.getPropertyValue("--repel-radius")) || 210;
      const strength = Number(rootStyle.getPropertyValue("--repel-strength")) || 2.5;
      const maxSpeed = Number(rootStyle.getPropertyValue("--max-speed")) || 8.0;

      const panicDistance = Math.max(n.width, n.height) * 0.8;

      // üî• PANIC TELEPORT IF CURSOR ENTERS BUTTON REGION
      if (dist < panicDistance) {
        const pad = 20;
        const maxX = s.width - n.width - pad;
        const maxY = s.height - n.height - pad;

        noPos.x = Math.random() * (maxX - pad) + pad;
        noPos.y = Math.random() * (maxY - pad) + pad;
        syncNoToStyle();

        requestAnimationFrame(stepAvoidance);
        return;
      }

      let vx = 0, vy = 0;

      if (dist < R && dist > 0.001) {
        const t = (R - dist) / R;
        const mag = strength * (t * t) * maxSpeed;

        vx = (dx / dist) * mag;
        vy = (dy / dist) * mag;
      }

      if (dist < R * 0.7) {
        vx += (Math.random() - 0.5) * 1.2;
        vy += (Math.random() - 0.5) * 1.2;
      }

      const pad = 10;
      const maxX = s.width - n.width - pad;
      const maxY = s.height - n.height - pad;

      noPos.x = Math.max(pad, Math.min(noPos.x + vx, maxX));
      noPos.y = Math.max(pad, Math.min(noPos.y + vy, maxY));

      syncNoToStyle();
      requestAnimationFrame(stepAvoidance);
    }


    stage.addEventListener("mousemove", (e) => {
      const s = stage.getBoundingClientRect();
      mouse.x = e.clientX - s.left;
      mouse.y = e.clientY - s.top;
    });

    stage.addEventListener("touchmove", (e) => {
      const s = stage.getBoundingClientRect();
      const t = e.touches[0];
      mouse.x = t.clientX - s.left;
      mouse.y = t.clientY - s.top;
    }, { passive: true });

    // ---- Flow transitions ----
    yesBtn.addEventListener("click", () => {
      yesBtn.style.display = "none";
      noBtn.style.display = "none";

      yayScreen.classList.add("show");

      setTimeout(() => {
        yayScreen.classList.remove("show");
        planScreen.classList.add("show");
      }, 3500);
    });

    // ---- One form submit (no email popup) via Formspree ----
    const state = { time: null, cuisine: null };

    function setSelected(groupEl, btn) {
      [...groupEl.querySelectorAll("button")].forEach(b => b.classList.remove("selected"));
      btn.classList.add("selected");
    }

    document.getElementById("timeRow").addEventListener("click", (e) => {
      const btn = e.target.closest("button[data-time]");
      if (!btn) return;
      state.time = btn.getAttribute("data-time"); // confirm / issue
      setSelected(document.getElementById("timeRow"), btn);
      statusLine.textContent = "";
    });

    document.getElementById("cuisineRow").addEventListener("click", (e) => {
      const btn = e.target.closest("button[data-cuisine]");
      if (!btn) return;
      state.cuisine = btn.getAttribute("data-cuisine");
      setSelected(document.getElementById("cuisineRow"), btn);
      statusLine.textContent = "";
    });

    document.getElementById("submitAll").addEventListener("click", async () => {
      const dish = document.getElementById("dishText").value.trim();
      const restrictions = document.getElementById("restrictionsText").value.trim();

      if (!FORMSPREE_ENDPOINT || FORMSPREE_ENDPOINT.includes("PASTE_YOUR_FORMSPREE_URL_HERE")) {
        statusLine.textContent = "Samarth: paste your Formspree link into the code first üôÇ";
        return;
      }

      if (!state.time) {
        statusLine.textContent = "Pick whether 8:30 works (or doesn‚Äôt).";
        return;
      }

      if (!state.cuisine && !dish) {
        statusLine.textContent = "Pick a cuisine OR type the exact dish.";
        return;
      }

      statusLine.textContent = "Submitting‚Ä¶";

      const payload = {
        name: nm || document.getElementById("name").textContent || "Valentine",
        date: "Feb 14",
        time_ist: "8:30 PM IST",
        time_status: state.time,     // confirm/issue
        cuisine: state.cuisine || "",
        restrictions: restrictions || "",
        exact_dish: dish || "",
        page: window.location.href
      };

      try {
        const res = await fetch(FORMSPREE_ENDPOINT, {
          method: "POST",
          headers: {
            "Accept": "application/json",
            "Content-Type": "application/json"
          },
          body: JSON.stringify(payload)
        });

        if (!res.ok) throw new Error("submit failed");

        // Success screen
        const card = document.querySelector(".card");
        card.innerHTML = `
        <div style="display:flex;flex-direction:column;align-items:center;justify-content:center;height:100%;text-align:center;padding:30px;">
          <div style="font-size:42px;font-weight:900;">üíñ Valentine Dinner Confirmed üíñ</div>
      
          <div style="margin-top:20px;font-size:16px;color:#333;">
            üìÖ February 14 <br>
            üï£ 8:30 PM IST
          </div>
      
          <div style="margin-top:18px;font-size:16px;color:#333;">
            üçΩ The food will be delivered to your home around 8:30 PM IST.
          </div>
      
          <div style="margin-top:18px;font-size:16px;color:#333;">
            Setting the vibe!<br>
            Setup your laptop for video call. <br>
            Light the scented candle. Dim the lights (if possible)<br>
            Connect your phone to the bluetooth speaker and <a href="https://www.youtube.com/watch?v=It80L-_WEGM" target="_blank" style="color:#ff4d6d;text-decoration:none;font-weight:600;">play this music</a> in low volume.<br>
            Get ready for a romantic evening!
          </div>      
          <div style="margin-top:18px;font-size:16px;color:#333;">
            üíª We‚Äôll meet here:
          </div>
      
          <div style="margin-top:8px;font-size:15px;">
            <a href="https://meet.google.com/bqc-tqtj-uqx" target="_blank" style="color:#ff4d6d;text-decoration:none;font-weight:600;">
              https://meet.google.com/bqc-tqtj-uqx
            </a>
          </div>
      
          <div style="margin-top:18px;font-size:13px;color:#666;">
            I‚Äôll share all these details on Whatsapp too.
          </div>
        </div>
      `;
      } catch (err) {
        statusLine.textContent = "Submit failed. Try again (adblocker can block it sometimes).";
      }
    });

    // init
    window.addEventListener("resize", () => {
      placeInitialButtons();
      initNoPosFromDOM();
    });

    requestAnimationFrame(() => {
      placeInitialButtons();
      initNoPosFromDOM();
      requestAnimationFrame(stepAvoidance);
    });
  </script>
</body>

